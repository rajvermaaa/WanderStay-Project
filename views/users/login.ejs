<% layout('layouts/boilerplate') -%>

<style>
    body {
    background-color: #f0f2f5; /* Light grey background */
}

.card {
    border-radius: 15px; /* Rounded corners for the card */
    border: none; /* Remove default border */
}

h1 {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #343a40; /* Dark text color */
}

.btn-dark {
    background-color: #495057; /* Darker shade for button */
}

</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="row">
        <h1 class="text-center mb-4">Login to WanderStay</h1>
        <div class="col-12 col-md-6 offset-md-3">
            <div class="card p-4 shadow">
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    
                    <div class="mb-3"> <!-- for username -->
                        <label for="username" class="form-label">Username</label>
                        <input name="username" id="username" type="text" class="form-control" placeholder="Enter your username" required>
                        <div class="invalid-feedback">
                            Please enter your username.
                        </div>
                    </div>

                    <div class="mb-3"> <!-- for password -->
                        <label for="password" class="form-label">Password</label>
                        <input name="password" id="password" type="password" class="form-control" placeholder="Enter your password" required>
                        <div class="invalid-feedback">
                            Please enter your password.
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <button class="btn btn-dark" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
